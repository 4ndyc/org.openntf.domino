	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

<modelVersion>4.0.0</modelVersion>

	<properties>
		<!-- it's always a good idea to use UTF8 -->
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<tycho-version>0.21.0</tycho-version>
		
		<!-- We must use java 1.6 compiler level -->
		<compiler>1.6</compiler>
		
		<!-- Third party dependencies -->
		<guava-version>18.0</guava-version>
		<tinkerpop-version>2.6.0</tinkerpop-version>
		<javassist-version>3.18.2</javassist-version>
		<javolution-version>6.1.0-SNAPSHOT</javolution-version>
	</properties>
	
	<repositories>
		<repository>
			<!--  TODO: Graph API requires javolution 6.1.0. But this is not yet released!-->
			<id>javolution</id>
			<url>https://maven.java.net/content/repositories/snapshots/</url>
		</repository>
	</repositories>
	<!-- 
		the name of this project 
		Children must refer exactly to this groupID:artifactId:version
		Note: The maven-release-plugin can change this info in all dependent POMs
	-->
	<groupId>org.openntf.domino</groupId>
	<artifactId>root</artifactId>
	<version>1.5.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	
	<name>OpenNTF Domino API</name>
